---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Android Projects</div>
  </div>

  <HorizontalCard
  title="Cinema App (Android)"
  img="/Kino.webp"
  desc="Мобильное приложение для кинотеатра на Kotlin + Jetpack Compose."
  url="#"
  badge="Kotlin"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
  title="EKTS App (Android)"
  img="/ECTS.webp"
  desc="Мобильное приложение для просмотра расписания колледжа ЕКТС на Kotlin."
  url="#"
  badge="Kotlin"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10"> C++ and ASP.NET Projects</div>
  </div>

  <HorizontalCard
    title="NextCloud"
    img="/Nextcloud.webp"
    desc="Личный сервер на ноутбуке с операционной системой Linux, доступный с любой точки мира."
    url="#"
    badge="C++"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Furniture_Site"
    img="/Atelie.webp"
    desc="Сайт для администрирования производства мебели и выполнения сотрудниками обязательств на ASP.NET"
    url="#"
    badge="ASP.NET"
  />
  <div class="divider my-0"></div>
</BaseLayout>
